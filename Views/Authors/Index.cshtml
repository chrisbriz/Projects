@model IEnumerable<CoolBooksFinal.Models.Authors>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("User"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            Author Name
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(String.Format("{0} {1}", item.FirstName, item.LastName))

            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td class="col-md-1">
                <div class="btn-group-vertical">
                    @if (Roles.IsUserInRole("Admin"))
                    {
                        <a href="~/Books/Edit/@item.Id"><span class="glyphicon glyphicon-book blue"></span>&nbsp;Edit</a><br />
                        <a href="~/Books/Delete/@item.Id"><span class="glyphicon glyphicon-trash red"></span>&nbsp;Delete</a>
                    }
                    <a href="~/Books/Details/@item.Id"><span class="glyphicon glyphicon-zoom-in green"></span>&nbsp;View</a><br />

                </div>
            </td>
        </tr>
    }

</table>
