@model IEnumerable<CoolBooksFinal.Models.Books>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("User"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @*Modified title for better readability*@
            Author
        </th>
        <th>
            @*Modified title for better readability*@
            Genre
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Part)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishDate)
        </th>
        <th>
            @*Modified title for better readability*@
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Authors.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genres.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Part)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ImagePath)*@
                <img class="" style="width: 100px" src="@Url.Content(item.ImagePath)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td class="col-md-1">
                <div class="btn-group-vertical">
                    @if (Roles.IsUserInRole("Admin"))
                    {
                        <a href="~/Books/Edit/@item.Id"><span class="glyphicon glyphicon-book blue"></span>&nbsp;Edit</a><br />
                        <a href="~/Books/Delete/@item.Id"><span class="glyphicon glyphicon-trash red"></span>&nbsp;Delete</a>
                    }
                    <a href="~/Books/Details/@item.Id"><span class="glyphicon glyphicon-zoom-in green"></span>&nbsp;View</a><br />

                </div>
            </td>
            @*<td>
                @if (Roles.IsUserInRole("Admin"))
                {
                    @Html.ActionLink("Delete ", "Delete", new { id = item.Id })
                    @Html.ActionLink("Edit ", "Edit", new { id = item.Id })
                }
                @Html.ActionLink("Details", "Details", new { id = item.Id })

            </td>*@
        </tr>
    }

</table>
